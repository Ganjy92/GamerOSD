@page "/hardware"
@inject IDeviceDataGrabber HardwareData

<h3>Hardware Monitor</h3>

<div class="row">
	<div class="col-md-3">
		<div class="flex-column">
			<div class="m-3">
			<GaugeCard Data=@CPULoad Title="CPU LOAD"></GaugeCard>
            </div>
			<div class="m-3">
			<GaugeCard Data=@GPULoad Title="GPU LOAD"></GaugeCard>
            </div>
			<div class="m-3">
			<GaugeCard Data=@RAMLoad Title="RAM LOAD"></GaugeCard>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="flex-column">
			<DataCard Title= "CPU Name" Unit=@CPUName></DataCard>
			<DataCard Title= "GPU Name" Unit=@GPUName></DataCard>
		</div>
	</div>
		<div class="col-md-3">
		<div class="flex-column">
			<div class="m-3">
			<DataCard Title= "GPU Temperature" Value=@Temp Unit="C"></DataCard>
			</div>
		</div>
	</div>
</div>





@code {

	private double CPULoad { get; set; }
	private double GPULoad { get; set; }
	private double RAMLoad { get; set; }

	private double? Temp  { get; set; }
	private string? CPUName { get; set; }
	private string? GPUName { get; set; }


	protected override void OnInitialized()
	{
		CPULoad = 0;

		HardwareData.NewDataCollected += (sender, e) =>
				{
					if(sender == null) return;
					GenericDeviceDataGrabber? info = (GenericDeviceDataGrabber)sender;
					if(info == null) return;

					CPULoad = info.ThisPC.TotalCpuLoad != null? (double)info.ThisPC.TotalCpuLoad : CPULoad;
					GPULoad = info.ThisPC.GPULoad.First() != null? (double)info.ThisPC.GPULoad.First() : GPULoad;
					RAMLoad = info.ThisPC.RAMLoad.First() != null ?(double)info.ThisPC.RAMLoad.First() : RAMLoad;

					CPUName = info.ThisPC.CpuCompleteName != null ? info.ThisPC.CpuCompleteName : "No brand" ;
					GPUName = info.ThisPC.GpuCompleteName != null ? info.ThisPC.GpuCompleteName : "No brand" ;

					Temp = info.ThisPC.GPUTemperature != null ? info.ThisPC.GPUTemperature.First() : 0 ;
					this.InvokeAsync(StateHasChanged);
				};
	}

}
